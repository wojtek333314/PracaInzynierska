<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <brotherhood.onboardcomputer.views.dotsBackground.BackgroundView
        android:id="@+id/backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewTroubleCodes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:background="@android:color/transparent"
        android:layout_above="@+id/linearLayout4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/troubleCodesInfo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:gravity="center_horizontal"
        android:padding="@dimen/spacing_small"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@color/transparent">

            <ImageView
                android:layout_width="@dimen/round_button_size"
                android:layout_height="@dimen/round_button_size"
                android:id="@+id/deleteErrorsButton"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_delete_forever_white_24px"
                android:padding="@dimen/spacing_normal"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/trouble_list_delete"
                android:id="@+id/textView11"
                android:gravity="center_vertical|center_horizontal"
                android:padding="@dimen/spacing_small"
                android:layout_margin="@dimen/spacing_small"
                android:textSize="@dimen/font_small"
                android:background="@color/transparent"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccentRed"
        android:id="@+id/linearLayout3"
        android:layout_above="@+id/linearLayout4"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>